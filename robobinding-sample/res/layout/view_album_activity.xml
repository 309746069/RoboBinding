<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:binding="http://robobinding.org/robobinding.android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	
	<TextView 
		android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/view_album" />
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/title" />
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    binding:text="{title}" />
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/artist" />
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    binding:text="{artist}" />
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/classical" />
	
	<TextView
		android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    binding:text="{classicalDescription}" />
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/composer"
	    binding:visibility="{composerEnabled}" />
	
	<TextView
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    binding:text="{composer}"
	    binding:visibility="{composerEnabled}" />
	    
</LinearLayout>
